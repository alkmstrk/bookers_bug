<div class="book-edit" style="margin-top: 100px; margin-left: 50px;">
	<div class="container">
			<div class="row">
	  			<div class="col-xs-3">
					<div class="profile">
						<h1>User info</h1>
						<div class="image"><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></div>
						    <table class="table table-hover table-inverse">
								<thead>
									<tr></tr>
									<tr></tr>
								</thead>
								<tbody>
									<tr>
										<th>name</th>
										<th><%= @book.user.name %></th>
									</tr>
									<tr>
										<th>introduction</th>
										<th><%= @book.user.introduction %></th>
									</tr>
								</tbody>
							</table>
							<%= link_to edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_20942" do %><% end %>
					</div>
					<h3 class="new-book">New book</h3>
						<%= form_for(@book_new) do |f| %>
							<% if @book.errors.any? %>
	  						<div class="error_message">
	        				<h2>2 errors</h2>
		    				<ul>
		      					<% @book.errors.full_messages.each do |message| %>
		        				<li><%= message %></li>
		      					<% end %>
		    				</ul>
	  						</div>
							<% end %>
					    <div class="field-row">Title</div>
					    	<input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
					    <div class="field-row">Opinion</div>
					    	<textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
					　　    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">

						<% end %>
				</div>
				<div class="col-xs-9">
					<div class="book-show">Book detail</div>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th></th>
								<th></th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
								<tr>
										<td><%= link_to user_path(@user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: '40x40' %><% end %>
											<br><%= link_to @book.user.name, user_path(@user) %></br>
										</td>
										<td><%= link_to book_path(@book.user) do %><%= @book.title %><% end %></td>
										<td><%= @book.body %></td>
									<% if current_user.id == @book.user_id %>
										<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
										<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
									<% end %>
				    			</tr>
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>
